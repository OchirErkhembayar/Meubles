<div class="container">
  <div class="row">
    <% @furnitures.reverse.each do |furniture| %>
      <div class="col-3">
        <div class="card d-flex justify-content-around" style ="width: 18rem;">
          <%= cl_image_tag furniture.photo.key, height:300, width: 400, crop: :fill %>
          <div class="row justify-content-between">
            <div class="col-6">
              <h5 class="card-title"><%= furniture.name %></h5>
            </div>
            <div class="col-6">
              <h5 class="card-title">$<%= furniture.price %></h5>
            </div>
          </div>
          <div class="row"><p class="card-subtitle"><%= furniture.location %></p></div>
          <div class="row"><%= link_to "more info", furniture_path(furniture), class: "btn btn-primary" %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
